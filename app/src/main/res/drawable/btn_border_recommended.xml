<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_tron_blue" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40324158" />
            <stroke android:width="1dp" android:dashWidth="10dp" android:dashGap="5dp" android:color="#FEBF7D" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>